<section>
  <div class=" container mt-5">
    <div class="row">
    <a class="ml-auto btn btn-success" href="admin/add-products" role="button">add product</a>
  </div>
  <div class="mt-4">
  <table class="table">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Title</th>
      <th scope="col">qty</th>
      <th scope="col">price</th>
      <th scope="col">image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.pname}}</td>
      <td>{{this.qty}}</td>
      <td>{{this.price}}</td>
      <td><img style="width:50px;height:50px" src="/images/{{this._id}}.jpg" alt="" srcset=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
      <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.pname}}')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
</div>
</section>