<div class="container">
<form id="check-out">
  <div class="form-row">
    <div class="form-group col-md-6">
          <label for="inputAddress">Address</label>
    <input type="text" name="Address" class="form-control" id="inputAddress" placeholder="1234 Main St">
          <label for="inputCity">City</label>
      <input type="text" name="city" class="form-control" id="inputCity">
          <label for="inputZip">Pin Code</label>
      <input type="text" name="pincode" class="form-control" id="inputZip">
            <label for="inputZip">Phone Number</label>
      <input type="text" name="phoneNumber" class="form-control" id="phoneNumber">
      <input type="text" name='userId' value='{{user._id}}' hidden>
    </div>

  <div class="form-group col-md-6">
      <div class="m-5" style="border: 10px;">
          <h5>Total Amount : Rs.{{total}}</h5>
    <div class="form-check">
<div class="form-check">
  <input class="form-check-input" name="payment" type="radio" value="COD" id="flexCheckDefault">
  <label class="form-check-label" for="flexCheckDefault">
    COD
  </label>
</div>
<div class="form-check mt-2">
  <input class="form-check-input" name="payment" type="radio" value="Online" id="flexCheckChecked" checked>
  <label class="form-check-label" for="flexCheckChecked">
    Online Payment
  </label>
</div>
        <button type="submit" class="btn btn-primary mt-2">Place Order</button>
      </label>
      </div>
    </div>
  </div>
  </div>
  
</form>
</div>
<script>
  $('#check-out').submit((e)=>{
    e.preventDefault()
    $.ajax({
      url:'/place-order',
      method:'post',
      data:$('#check-out').serialize(),
      success:(response)=>{
        alert(response)
        if(response.status){
          location.href='/order-placed'
        }
      }
    })
  })

</script>