<section class="container mt-5 p-0">
    <div class="row">
        {{#each products}}
        <div class="col-md-3 p-3">
            <div class="card" style="width: 16rem;">
                <img src="images/{{this._id}}.jpg" style="height:17rem" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.pname}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <h5 class="card-text">Rs.{{this.price}}</h5>
                    <button class="btn btn-primary" onClick="addToCart('{{this._id}}')">Add to Cart</button>
                </div>
            </div>
        </div>
        {{/each}}
        </div>
</section>

